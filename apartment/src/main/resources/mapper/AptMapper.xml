<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.dw.Mapper.AptMapper">
    <resultMap type="NameCountDto" id="newNameCountDto">
  	<!-- 1:1로 DTO의 멤버변수를 매핑-->
  	<result column="sigungu" property="SIGUNGU"/>
  	<result column="bungi" property="BUNGI"/>
  	<result column="apartmentname" property="APARTMENTNAME"/>
  	<result column="roadname" property="ROADNAME"/>
  	<result column="lat" property="LAT"/>
  	<result column="lng" property="LNG"/>
	</resultMap>   
    
    <select id="get" parameterType="hashMap" resultMap="newNameCountDto">
       
    select SIGUNGU, BUNGI, APARTMENTNAME, ROADNAME, lat, lng from latlng2 where sigungu like #{region_1depth_name}||'%' and sigungu like '%'||#{region_2depth_name}||'%'
    
    </select>
    
    <select id="get2" parameterType="hashMap" resultMap="newNameCountDto">
    
    select SIGUNGU, BUNGI, APARTMENTNAME, ROADNAME, lat, lng from latlng2 where sigungu like 
    
    <choose>
        <when test="city == '세종특별자치시'">
            #{city} || '%'
        </when>
        <otherwise>
            #{city} || '%' AND sigungu LIKE '%' || #{district} || '%'
        </otherwise>
    </choose>
    
    </select>
    
    <select id="getLatLngNameCountDto" resultMap="newNameCountDto">
    
    Select * from latlng2 where LAT = #{lat} and LNG = #{lng}
    
    </select>
    
